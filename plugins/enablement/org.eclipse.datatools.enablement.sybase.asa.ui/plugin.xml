            class="org.eclipse.datatools.enablement.sybase.asa.internal.ui.connection.NewASAConnectionProfileWizard"
            description="%ASA_CONNECTION_PROFILE_WIZARD_DESCRIPTION"
            icon="icons/new_db_element.gif"
