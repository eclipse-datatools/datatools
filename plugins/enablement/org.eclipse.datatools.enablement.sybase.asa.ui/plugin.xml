	                <instanceof value="org.eclipse.datatools.enablement.sybase.asa.virtual.SybaseASAUDTNode"/>
	                <instanceof value="org.eclipse.datatools.enablement.sybase.asa.virtual.SybaseASAIndexNode"/>
